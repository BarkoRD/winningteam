generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  username String
  role     UserRole
  invoices Invoice[]
}

model Product {
  id     Int        @id @default(autoincrement())
  name   String
  price  Decimal
  cost   Decimal
  stock  Int
  profit Decimal
  type   ProducType

  invoiceDetail Detalle_Invoice[]
}

model Invoice {
  id          Int               @id @default(autoincrement())
  userId      Int
  date        DateTime          @default(now())
  total       Decimal
  offer       Decimal
  offerReason String?
  paymentType PaymentType
  user        User              @relation(fields: [userId], references: [id])
  detail      Detalle_Invoice[]
}

model Detalle_Invoice {
  id        Int     @id @default(autoincrement())
  invoiceId Int
  productId Int
  quantity  Int
  subtotal  Decimal
  invoice   Invoice @relation(fields: [invoiceId], references: [id])
  producto  Product @relation(fields: [productId], references: [id])
}

model Rol {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?
}

enum UserRole {
  OWNER
  EMPLOYEE
}

enum ProducType {
  REFRESHMENT
  VAPE
  CARWASH
}

enum PaymentType {
  CASH
  CARD
  TRANSFER
}
